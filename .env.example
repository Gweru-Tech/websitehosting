# Ntandostore Hosting Platform Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=10000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Database Configuration
DB_PATH=./ntandostore.db

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads
DEPLOY_DIR=./deployed

# Security Configuration
BCRYPT_ROUNDS=10
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Custom Domain Configuration
DEFAULT_DOMAIN=ntandostore.onrender.com
SUPPORTED_DOMAINS=.ntandostore.onrender.com,.your-custom-domain.com

# SSL Configuration
SSL_AUTO_RENEW=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@ntandostore.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
ENABLE_ANALYTICS=false

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info

# Development Settings
DEBUG=false
ENABLE_CORS=true